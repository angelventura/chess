  <artifactId>chess-base</artifactId>
  <version>0.0.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <inceptionYear>2019</inceptionYear>

  <scm>
	<connection>scm:git:https://github.com/angelventura/chess.git</connection>
	<developerConnection>scm:git:https://github.com/angelventura/chess.git</developerConnection>
	
	<url>https://github.com/angelventura/chess.git</url>
	<tag>HEAD</tag>
  </scm>
  
  
  <build>
	<defaultGoal>install</defaultGoal>
	<plugins>
